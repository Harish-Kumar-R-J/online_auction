<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".inside_app"
    android:layout_marginBottom="10dp"
    android:paddingTop="5dp"
    android:id="@+id/list_item_id"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/ll_p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ll_p_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ll_p_image" />

    <TextView
        android:id="@+id/ll_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_p_name"
        android:layout_toRightOf="@+id/ll_p_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/ll_p_image" />

    <ImageButton
        android:id="@+id/ll_p_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />


</RelativeLayout>